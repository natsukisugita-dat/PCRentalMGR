@model PCRentalMGR.Models.Device

@{
    ViewData["Title"] = "機器詳細";
}

<h1>機器詳細</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">資産番号</dt>
        <dd class="col-sm-10">@Model.Asset_no</dd>

        <dt class="col-sm-2">メーカー</dt>
        <dd class="col-sm-10">@Model.Maker</dd>

        <dt class="col-sm-2">機種</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">OS</dt>
        <dd class="col-sm-10">@Model.Os</dd>

        <dt class="col-sm-2">メモリ</dt>
        <dd class="col-sm-10">@Model.Memory</dd>

        <dt class="col-sm-2">容量</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">保管場所</dt>
        <dd class="col-sm-10">@Model.Store</dd>

        <dt class="col-sm-2">利用開始日</dt>
        <dd class="col-sm-10">@Model.start.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">使用期限</dt>
        <dd class="col-sm-10">@Model.limit.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">備考</dt>
        <dd class="col-sm-10">@Model.Failure</dd>

        <dt class="col-sm-2">再作成者</dt>
        <dd class="col-sm-10">@Model.remaker</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">編集</a> |
    <a asp-action="Index" class="btn btn-secondary">戻る</a>
</p>
