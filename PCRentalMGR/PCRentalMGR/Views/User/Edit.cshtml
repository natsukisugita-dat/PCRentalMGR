@model PCRentalMGR.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1>ユーザー情報編集</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Employee Number -->
            <div class="form-group">
                <label asp-for="Employee_no" class="control-label"></label><span class="text-danger"> *</span>
                <input asp-for="Employee_no" class="form-control" />
                <span asp-validation-for="Employee_no" class="text-danger"></span>
            </div>

            <!-- Name -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label><span class="text-danger"> *</span>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Department -->
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <!-- Tel No -->
            <div class="form-group">
                <label asp-for="Tel_no" class="control-label"></label>
                <input asp-for="Tel_no" class="form-control" />
                <span asp-validation-for="Tel_no" class="text-danger"></span>
            </div>

            <!-- Mail Address -->
            <div class="form-group">
                <label asp-for="Mail_address" class="control-label"></label>
                <input asp-for="Mail_address" class="form-control" />
                <span asp-validation-for="Mail_address" class="text-danger"></span>
            </div>

            <!-- Gender -->
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="0">男性</option>
                    <option value="1">女性</option>
                    <option value="2">その他</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <!-- Position -->
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <!-- Account Level -->
            <div class="form-group">
                <label asp-for="Account_level" class="control-label"></label>
                <select asp-for="Account_level" class="form-control">
                    <option value="管理者">管理者</option>
                    <option value="使用者">使用者</option>
                </select>
                <span asp-validation-for="Account_level" class="text-danger"></span>
            </div>

            <!-- Retire Date -->
            <div class="form-group">
                <label asp-for="Retire_date" class="control-label"></label>
                <input asp-for="Retire_date" class="form-control" />
                <span asp-validation-for="Retire_date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="更新" class="btn btn-primary" />
                <a onclick="history.back()" class="btn btn-secondary">戻る</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
